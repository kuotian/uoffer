<view class="grace-number-box" style="width:{{width}};">
  <view class="grace-number-box-doBtn" catchtap="reduce" 
  style="width:{{btnSize}}; height:{{btnSize}}; font-size:{{btnFontSize}}; line-height:{{btnSize}}; color:{{btnColr}};">-</view>
  <input class="grace-number-box-input" type="number" 
  value="{{value}}" disabled="{{disabled}}" bind:blur="blur" 
  style="background:{{inputBG}}; height:{{inputHeight}}; line-height:{{inputHeight}}; font-size:{{inputFontSize}}; color:{{inputColor}}; padding:{{inputPadding}}; border-radius:{{inputBorderRadius}};"></input>
  <view class="grace-number-box-doBtn" catchtap="add" 
  style="width:{{btnSize}}; height:{{btnSize}}; font-size:{{btnFontSize}}; line-height:{{btnSize}}; color:{{btnColr}};">+</view>
</view>