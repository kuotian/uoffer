page{
   background: linear-gradient(#2AA2DF,#ffffff);
}
.head{
  width: 100%;
  text-align: center;
  margin: 50rpx auto;
  margin-bottom: 140rpx;
}
.head_img{
  overflow: hidden;
  display: block;
  width: 130rpx!important;
  height: 130rpx!important;
  border-radius:50%; 
  margin:0 auto;
}
.head .name{
  text-align: center;
  line-height:85rpx;
  font-size: 34rpx;
  color: #ffffff;
}
.bacolor{
  width: 95%;
  height: 100rpx;
  background: #ffffff;
  box-shadow:0 0 10rpx 1rpx #2AA2DF;
  margin: 30rpx auto;
  border-radius: 10rpx;
}
.bacolor_img{
  width: 50rpx;
  height: 50rpx;
  margin-top:25rpx;
  margin-left: 20rpx; 
  float: left;
}
