/* pages/user/mianshi/details/details.wxss */
page{
  background: #f5f5f5;
}
.head{
  width: 100%;
  height: 200rpx;
  background: #ffffff;
}
.head1{
  width: 95%;
  margin: 0 auto;
  height: 200rpx;
  position: relative;
}
.head1_title{
  font-size: 32rpx;
  color: #333333;
  padding-top:55rpx;
}
.head1_adderr{
  margin-top: 30rpx;
  font-size: 22rpx;
  color: #999999;
}
.head1_status{
  position: absolute;
  right: 0;
  bottom: 40rpx;
  font-size: 26rpx;
  color: #2AA2DF;
  border: 1rpx solid #2AA2DF;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}
.body{
  width: 100%;
  background: #ffffff;
  margin-top: 20rpx;
}
.body_head{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 30rpx;
  color: #333333;
}
.body_head text{
  margin-left: 20rpx;
}
.body_body{
  width: 95%;
  margin: 0 auto;
}
.body_time{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
}
.body_time1{
  color: #999999;
}
.body_time2{
  display: flex;
  align-items: flex-start;
  width: 80%;
  line-height: 99rpx;
  color: #333333;
  border-bottom: 1rpx solid #f5f5f5;
}
.body_time2 image{
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}
.body_phone{
  margin-left: 30rpx;
}
.c-info{
  padding: 10px;
  font-size: 12px;
  line-height: 18px;
  color: #333;
}
.bottom{
  position: fixed;
  bottom: 0;
  left: 0;
  background: #2AA2DF;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #ffffff;
  font-size: 30rpx;
}