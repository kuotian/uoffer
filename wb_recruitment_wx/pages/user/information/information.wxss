/* pages/user/jianli/xiugai/information/information.wxss */
@import "../../../lib/weui.wxss";
page{
  background: #f5f5f5;
}
.lest,.grace-form-item{
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  border-top: 1rpx solid #f5f5f5;
  position: relative;
}
.lest_input{
  width: 60%;
  height: 100rpx;
  float: right;
  margin-right:30rpx; 
  font-size: 30rpx;
  text-align: right;
  color: #999;
}
.lest_picker{
   width: 60%;
  height: 100rpx;
  float: right;
  margin-right:30rpx; 
  font-size: 30rpx;
  text-align: right;
  color: #999;
  line-height: 100rpx;
}
.grace-form-label{
	margin-left: 20rpx;
	font-size: 32rpx;
	color: #333333;
}
.lest_tr{
  float: left;
  margin-left: 20rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  color: #333333;
}
.lest_right{
  width: 30rpx;
  height: 30rpx;
  float: right;
  margin-top:37rpx;
  margin-right: 20rpx;
}
.determine{
  width: 100%;
  height: 98rpx;
  background-color: #2AA2DF;
  font-size: 40rpx;
  color: #fff;
  text-align: center;
  line-height: 98rpx;
  letter-spacing:5px;
  position: fixed;
  bottom: 0;
  right: 0;
  border-radius: 0;
  border: 0;
}
.determine::after {
    border-radius: 0;
    border: 0;
}

.modal{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 11;
}

.modal1{
  width: 600rpx;

  background: #ffffff;
  border-radius:10rpx;
  margin:35% auto;
}
.radio-group{
  margin-left: 80rpx;
  padding-top: 30rpx;
}
.radio1{
  width: 500rpx;
  height: 110rpx;
}
.radio1 radio{
  float: left;
}
.setOne{
  font-size: 32rpx;
  color: #333333;
  line-height: 64rpx;
  margin-left: 73rpx;
}
.timeCc{
  position: absolute;
  top:102%;
  z-index: 100;
  background-color: #cccccc;
}