/* pages/user/mianshi/mianshi.wxss */
page {
	background: #f5f5f5;
}

.msg_list {
	display: flex;
	flex-direction: column;
	width: 100%;
	background: #fff;
	border-bottom: 1rpx solid #eeeeee;
}

.btn_tab {
	width: 95%;
	display: flex;
	flex-direction: row;
	margin: 0 auto;
}

.btn_tab>view {
	width: 50%;
	color: #333;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	text-align: center;

}

.btn_tab view.active {
	color: #2AA2DF;
	border-bottom: 2rpx solid #2AA2DF;
}

.btn_tab view.normal {
	color: #666666;
}

.table {
	width: 100%;
	padding-bottom: 20rpx;
}

.table_head {
	width: 100%;
	padding: 20rpx;
	margin: 0 auto;
	position: relative;
	background: #fff;
	box-sizing: border-box;
}

.table_name {
	width: 100%;
	float: left;
	font-size: 30rpx;
	color: #333;
}

.table_type {
	width: 100%;
	font-size: 28rpx;
	line-height: 60rpx;
}

.type_left {
	color: #2AA2DF;
}

.type_right {
	color: #666666;
	padding: 0rpx 20rpx;
	border-left: 2rpx solid #ccc;
	margin-left: 20rpx;
}

.table_address {
	font-size: 22rpx;
	color: #999999;
}

.table_address text {
	float: right;
}

.table_but {
	position: absolute;
	right: 20rpx;
	top: 30rpx;
	border: 1rpx solid #2AA2DF;
	font-size: 30rpx;
	color: #2AA2DF;
	padding: 5rpx 20rpx;
	border-radius: 10rpx;
}

.empty-view {
	width: 280rpx;
	height: 280rpx;
	border-radius: 280rpx;
	background-color: #F6F7F8;
	margin-top: 300rpx;
}

.empty-img {
	width: 220rpx;
	height: 200rpx;
	margin: 40rpx;
	border-radius: 200rpx;
}

.grace-text-small {
	margin-top: 10px;
}
