/**index.wxss**/
page{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.index-body{
  position: relative;
  background-color: #2AA2DF;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-top: 50px;
}
.title,.desc{
  color:#fff;
  text-align: center;
}
.title{
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 10px;
}
.desc{
  font-size: 16px;
  letter-spacing: 1px;
}
.userinfo{
  position: absolute;
  bottom: 150rpx;
  margin: auto;
  width: 100%;
}
.login-btn{
  color: #2AA2DF;
  font-size: 29rpx;
  width:380rpx;
  height:  80rpx;
  line-height: 80rpx;
  background-color:#ffffff; 
}
.cancel-btn{
  width:380rpx;
  height:  80rpx;
  line-height: 80rpx;
  font-size: 29rpx;
  color: #2AA2DF;
  margin-top: 20px;
}
.please{
  color: #2AA2DF;
  font-size: 29rpx;
  width:380rpx;
  height:  80rpx;
  line-height: 80rpx;
  background-color:#ffffff; 
  border: 1px solid #2AA2DF;
  margin: 100px auto;
}



